@model IEnumerable<Garage_app.Models.category>

@{
    ViewBag.Title = "Index";
}

<p>
    @Html.ActionLink("Create New", "Create","categories",null,new { @class = "btn btn-info" })
</p>
<table class="display" id="example">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Category_Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Category_Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", "categories", null, new { id = item.Category_Id , @class = "btn btn-info" }) 
                    @Html.ActionLink("Details", "Details", "categories", null, new { id = item.Category_Id, @class = "btn btn-info" }) 
                    @Html.ActionLink("Delete", "Delete", "categories", null, new { id = item.Category_Id, @class = "btn btn-info" })
                </td>
            </tr>
        }
    </tbody>
</table>
<script type="text/javascript">
        $(document).ready(function() {
            $('#example').DataTable();
        } );
</script>