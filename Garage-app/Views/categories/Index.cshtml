@model IEnumerable<Garage_app.Models.category>

@{
    ViewBag.Title = "Index";
}

<p>
    <button onclick="create_fun()">Create New</button> 
</p>
<table class="display" id="example">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Category_Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Category_Name)
                </td>
                <td>
                    <button onclick="edit_fun(@item.Category_Id)">Edit</button>
                    <button onclick="detail_fun(@item.Category_Id)">Detail</button>
                    <button onclick="delete_fun(@item.Category_Id)">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>
<script type="text/javascript">
        $(document).ready(function() {
            $('#example').DataTable();
        } );
</script>

<div id="popup" class="modal">

</div>
<script>
    function create_fun()
    {
        document.getElementById('popup').style.display = 'block';
    $("#popup").load("categories/Create");
       var modal = document.getElementById('popup');
       window.onclick = function (event) {
       if (event.target == modal) {
           modal.style.display = "none";
       }
       }
    }
    function edit_fun(Category_Id) {
        document.getElementById('popup').style.display = 'block';
        $("#popup").load("categories/Edit?id=" + Category_Id);
        var modal = document.getElementById('popup');
        window.onclick = function (event) {
            if (event.target == modal) {
                modal.style.display = "none";
            }
        }
    }
    function delete_fun(Category_Id) {
        document.getElementById('popup').style.display = 'block';
        $("#popup").load("categories/Delete?id=" + Category_Id);
        var modal = document.getElementById('popup');
        window.onclick = function (event) {
            if (event.target == modal) {
                modal.style.display = "none";
            }
        }
    }
    function detail_fun(Category_Id) {
        document.getElementById('popup').style.display = 'block';
        $("#popup").load("categories/Details?id=" + Category_Id);
        var modal = document.getElementById('popup');
        window.onclick = function (event) {
            if (event.target == modal) {
                modal.style.display = "none";
            }
        }
    }
</script>

