@model IEnumerable<Garage_app.Models.purchase>

@{
    ViewBag.Title = "Index";
}

<p>
    <button type="button" class="btn btn-default btn-sm" onclick="create_fun()">
        <span class="glyphicon glyphicon-plus-sign"></span> Create New
    </button>
</p>
<table class="display" id="example" data-page-length='10'>
    <thead style="background-color:silver">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Purchase_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Purchase_Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.category.Category_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.company.Company_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.pay.Value)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.product.Product_Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Purchase_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Purchase_Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.category.Category_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.company.Company_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.pay.Value)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.product.Product_Name)
                </td>
                <td>
                    <button type="button" class="btn btn-default btn-sm" onclick="edit_fun(@item.Purchase_Id)">
                        <span class="glyphicon glyphicon-pencil"></span> Edit
                    </button>
                    <button type="button" class="btn btn-default btn-sm" onclick="delete_fun(@item.Purchase_Id)">
                        <span class="glyphicon glyphicon-trash"></span> Delete
                    </button>
                    <button type="button" class="btn btn-default btn-sm" onclick="detail_fun(@item.Purchase_Id)">
                        <span class="glyphicon glyphicon-comment"></span> Detail
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>
<div id="popup" class="modal">

</div>
<script type="text/javascript">
        $(document).ready(function() {
            $('#example').DataTable({
                dom: 'Bfrtip',
                responsive: true,
                lengthMenu: [
                [10, 25, 50, -1],
                ['10', '25', '50', 'Show all']
                ],
                buttons: [
                    {
                        extend: 'pdf',
                        title: "Employee Report",
                        exportOptions: {
                            columns: [0, 1, 2, 3, 4, 5]
                        },
                    },
                    {
                        extend: 'excel',
                        title: "Employee Report",
                        exportOptions: {
                            columns: [0, 1, 2, 3, 4, 5]
                        }
                    },
                    {
                        extend: 'print',
                        title: "Employee Report",
                        exportOptions: {
                            columns: [0, 1, 2, 3, 4, 5]
                        }
                    },
                   'colvis',
                    'pageLength'

                ]
            } );

        } );
    function create_fun()
    {

    document.getElementById('popup').style.display = 'block';
    $("#popup").load("Create");

       var modal = document.getElementById('popup');
       window.onclick = function (event) {
       if (event.target == modal) {
           modal.style.display = "none";
       }
       }
       $("#popup").css("top", ((window.screen.height - $("#popup").height()) / 2)*(-1));
       $("#popup").css("left", ((window.screen.width - $("#popup").width()) / 2));
    }
    function edit_fun(Category_Id) {
        document.getElementById('popup').style.display = 'block';
        $("#popup").load("categories/Edit?id=" + Category_Id);
        var modal = document.getElementById('popup');
        window.onclick = function (event) {
            if (event.target == modal) {
                modal.style.display = "none";

            }
        }
        $("#popup").css("top", ((window.screen.height - $("#popup").height()) / 2)*(-1));
        $("#popup").css("left", ((window.screen.width - $("#popup").width()) / 2));
    }
    function delete_fun(Category_Id) {
        document.getElementById('popup').style.display = 'block';
        $("#popup").load("categories/Delete?id=" + Category_Id);
        var modal = document.getElementById('popup');
        window.onclick = function (event) {
            if (event.target == modal) {
                modal.style.display = "none";
            }
        }
        $("#popup").css("top", ((window.screen.height - $("#popup").height()) / 2)*(-1));
        $("#popup").css("left", ((window.screen.width - $("#popup").width()) / 2));
    }
    function detail_fun(Category_Id) {
        document.getElementById('popup').style.display = 'block';
        $("#popup").load("categories/Details?id=" + Category_Id);
        var modal = document.getElementById('popup');
        window.onclick = function (event) {
            if (event.target == modal) {
                modal.style.display = "none";
            }
        }
        $("#popup").css("top", ((window.screen.height - $("#popup").height()) / 2)*(-1));
       $("#popup").css("left", ((window.screen.width - $("#popup").width()) / 2));
    }
</script>
