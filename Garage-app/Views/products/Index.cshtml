@model IEnumerable<Garage_app.Models.product>

@{
    ViewBag.Title = "Index";
}

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table id="example" class="display">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Product_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.category.Category_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.company.Company_Name)
            </th>
            <th>Operation</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Product_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.category.Category_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.company.Company_Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Product_Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Product_Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Product_Id })
                </td>
            </tr>
        }
    </tbody>

</table>
<script type="text/javascript">
        $(document).ready(function() {
            $('#example').DataTable();
        } );
</script>


